<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.latoris.myword.MainActivity">
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="12"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi"
            android:layout_gravity="center"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:hint="搜索"
            android:id="@+id/search_word_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="搜索"
            android:textSize="13sp"
            android:id="@+id/search_button"
            android:layout_width="30sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/search_word_list"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </ListView>
    <LinearLayout
        android:id="@+id/meaning_layout"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text=""
            android:textSize="30sp"
            android:id="@+id/word_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:id="@+id/voice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:visibility="invisible"
                android:id="@+id/voice"
                android:text="发音"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text=""
            android:id="@+id/meaning_dict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:visibility="invisible"
            android:id="@+id/add_word"
            android:text="添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
