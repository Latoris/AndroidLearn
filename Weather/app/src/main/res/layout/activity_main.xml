<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.latoris.weather.MainActivity">

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新:9:30"
        android:id="@+id/updateTime"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/city"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17°"
        android:id="@+id/nowTemp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10°"
        android:id="@+id/todayLow"
        android:textSize="30dp"
        android:layout_above="@+id/nowTemp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20°"
        android:id="@+id/todayHigh"
        android:textSize="30dp"
        android:layout_alignTop="@+id/todayLow"
        android:layout_toEndOf="@+id/updateTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阴云"
        android:id="@+id/weatherNow"
        android:textSize="30dp"
        android:layout_above="@+id/todayLow"
        android:layout_toEndOf="@+id/weatherNowIcon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherNowIcon"
        android:layout_alignBottom="@+id/weatherNow"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
